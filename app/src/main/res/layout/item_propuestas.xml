<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="8dip"
        android:id="@+id/toplist"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dip">
        <TextView
            android:gravity="center"
            android:id="@+id/marca_txt"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:text="Marca: \nChevrolet"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:id="@+id/gama_txt"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Gama: \nCoupe" />

        <TextView
            android:gravity="center"
            android:id="@+id/modelo_txt"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:text="Modelo: \nCamaro"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomlist"
        android:layout_below="@id/toplist"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:id="@+id/motor_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Motor: \n8 cil" />

        <TextView
            android:gravity="center"
            android:id="@+id/plazas_txt"
            android:layout_weight="3"
            android:layout_width="0dip"
            android:text="Plazas: \n4"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:id="@+id/puertas_txt"
            android:layout_weight="3"
            android:layout_width="0dip"
            android:text="Puertas: \n 2"
            android:layout_height="match_parent" />
    </LinearLayout>


    <View
        android:layout_marginLeft="8dip"
        android:layout_marginTop="8dip"
        android:background="#000000"
        android:layout_below="@id/bottomlist"
        android:layout_width="match_parent"
        android:layout_height="1dip"/>
</RelativeLayout>